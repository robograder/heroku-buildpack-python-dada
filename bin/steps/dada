#!/usr/bin/env bash

puts-step "Installing dada"

echo "DADA" | indent

DADA_URL=https://github.com/robograder/dada

git clone $DADA_URL .heroku/dada | indent
make -C .heroku/dada pb dada 2>&1 | indent

